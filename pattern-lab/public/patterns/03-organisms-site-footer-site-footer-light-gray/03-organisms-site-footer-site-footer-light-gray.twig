<footer id="site-footer" class={{ footer_color }}>
  <div class="site-footer__inner">

    {% include "@molecules/address-block/address-block.twig" %}
    {% include "@molecules/social-media-links/social-media-links.twig" %}

    <div id="footer-text-block" class="footer-text">

      {# pattern lab demo text #}
      {% if pl_footer_text|length %}
        <p>{{ pl_footer_text }}</p>

      {% else %}
      {# drupal site text #}
        {% set footer_text_value = footer_text.value %}
        {% if footer_text_value|length == 0 %}
          {% set footer_text_value = ' ' %}
        {%  endif %}
          {% set text_value = {
            '#type':   'processed_text',
            '#text':    footer_text_value,
            '#format':  footer_text.format,
          } %}

        <p>{{text_value}}</p>

      {% endif %}

    </div>{# end .footer-text #}

    {# show admin_link if selected and user is not logged in #}
    {% if admin_link == 1 %}
      {% if not logged_in %}
        <a class="footer-login-link" href="/user/login">Admin Login</a>
      {% endif %}
    {% endif %}

  </div>{# end .site-footer__inner #}
</footer>
