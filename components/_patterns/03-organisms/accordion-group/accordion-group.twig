{{ attach_library('wcm8_patterns/accordion-group') }}

<dl id="accordionGroup" role="presentation" class="accordion" data-allow-multiple>

  {% for accordion_item in accordion_items %}
    {% include "@organisms/accordion-group/_accordion-item.twig" with {
      "accordion_item_number": accordion_item.accordion_item_number,
      "accordion_term": accordion_item.accordion_term,
      "accordion_def": accordion_item.accordion_def,
    } %}
  {% endfor %}

</dl>
